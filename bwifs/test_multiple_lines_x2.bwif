// test_multiple_lines_x2.bwif - simple display with line
// Add lineSpec with width
slider(winH, 0, 900, 2000);
slider(winW, 0, 1400, 2000);
add window size=winW,winH;
add axis;

add line color=(1,0,0) pt=(0,0,0) pt=(1,0,0) ;
add line color=(0,1,0)	pt=(1,0,0) pt=(1,1,0) ;
add line color=(0,0,1) pt=(1,1,0) pt=(0,1,0) ;
add line color=(1,1,0) pt=(0,1,0) pt=(0,0,0) ;

add line color=(1,0,0) pt=(0,0,2) pt=(1,0,2);
add line color=(0,1,0)	pt=(1,0,2) pt=(1,1,2) lines=10;
add line color=(0,0,1) pt=(1,1,2) pt=(0,1,2) lines=20;
add line color=(1,1,0) pt=(0,1,2) pt=(0,0,2) lines=30;

add line color=(1,0,0) pt=(0,0,3) pt=(1,0,3) lines=40;
add line color=(0,1,0)	pt=(1,0,3) pt=(1,1,3) lines=50;
add line color=(0,0,1) pt=(1,1,3) pt=(0,1,3) lines=60;
add line color=(1,1,0) pt=(0,1,3) pt=(0,0,3) lines=70;

display;
